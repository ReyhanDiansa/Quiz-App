    <div class="card mx-auto " style="width: 30rem; margin-top: 7rem;">
      <div class="card-body"> 
   <div class="container mt-3">
     <h1 class="text-center">Sign Up</h1>
     <% if (msg.length !==0) { %>
      <div class="alert alert-danger" role="alert"><%= msg %></div>
      <% } %>
     <form action="/signup" method="post">
       <div class="form-group">
         <label for="exampleInputEmail1">Username</label>
         <input type="text" name="username" class="form-control" placeholder="Username">
       </div>
       <div class="form-group">
         <label for="exampleInputPassword1">Password</label>
         <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
       </div>
       <button type="submit" class="btn btn-primary" style="width: 20%;margin: 0 170px;">Daftar</button>
     </form>
     <h5 class="text-center">Sudah punya akun?<a href="/login">login</a></h5>
   </div>
   </div>
   </div>

